<div class='header-vehicles-list'>
  {{#if savedVehiclesPage}}
  <h2>
    Saved Vehicles
  </h2>
  {{/if}}
</div>
{{#each vehiclesFromApi}}
<form action="/vehicles/details/{{this.vin}}" method="POST">
  <input type="hidden" name="dealerLink" value="{{this.clickoffUrl}}">
  <div class='list-of-vehicles'>
    <div class='list-of-vehicles-box'>
      <button type="submit" class="button-to-open-vehicle-details list-vehicles">
        <div id='vehicle-card'>
          <img id='vehicle-primary-img' src="{{this.primaryPhotoUrl}}" alt='' />
          <div class='vehicle-info'>
            <div class='vehicle-year-make'>
              {{this.year}}
              {{this.make}}
            </div>
            {{this.bodyStyle}}
            {{this.model}}
            {{this.price}}
            {{this.mileage}}
            <h4>
              <b>
                Exterior
              </b>
            </h4>{{this.displayColor}}
            <h4>
              <b>
                Location
              </b>
            </h4>{{this.city}}, {{this.state}}
          </div>
        </div>
      </button>
    </div>
  </div>
</form>
{{#if ../usersListOfVehicles}}
<form action="/profile/savedvehicles/delete/{{this.vin}}" method='GET'>
  <button type='submit' class='btn btn-danger'>Remove From Saved List</button>
</form>
{{/if}}
{{/each}}
{{#if errorMessage}}
{{errorMessage}}
{{/if}}