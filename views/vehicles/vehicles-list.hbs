<form action=''>
  <div class='list-of-vehicles'>
    {{#each vehiclesFromApi}}
      <div class='list-of-vehicles-box'>
        <a href="/vehicles/details/{{this.vin}}">
          <div id='vehicle-card'>
            <img
              id='vehicle-primary-img'
              src="{{this.primaryPhotoUrl}}"
              alt=''
            />
            <div class='vehicle-info'>
              <div class='vehicle-year-make'>
                {{this.year}}
                {{this.make}}
              </div>
              {{this.bodyStyle}}
              {{this.model}}
              {{this.price}}
              {{this.mileage}}
              <h4>
                <b>
                  Exterior
                </b>
              </h4>{{this.displayColor}}
              <h4>
                <b>
                  Location
                </b>
              </h4>{{this.city}}, {{this.state}}
            </div>
          </div>
        </a>
      </div>
    {{/each}}
    {{#if errorMessage}}
      {{errorMessage}}
    {{/if}}
  </div>
</form>