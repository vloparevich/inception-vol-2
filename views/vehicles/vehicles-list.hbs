<form action=''>
  <div class='list-of-vehicles'>

    {{#each vehiclesFromApi}}
      <div id='vehicle-card'> 
        <img id='vehicle-primary-img' src="{{this.primaryPhotoUrl}}" alt=''/>
        <div class='vehicle-info'>
          <a href="/vehicles/details/{{this.vin}}">click here</a>
          <div class='vehicle-year-make'>
            {{this.year}}
            {{this.make}}
          </div>
          {{this.bodyStyle}}
          {{this.model}}
          {{this.price}}
          {{this.mileage}}
          <h4><b>Exterior</b></h4>{{this.displayColor}}
          <h4><b>Location</b></h4>{{this.city}}, {{this.state}}
        </div>
      </div>
    {{/each}}

    {{#if errorMessage}}
      {{errorMessage}}
    {{/if}}
  </div>
</form>