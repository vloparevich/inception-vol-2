<div class="vehicle-details-section">
  <div class="errorDeletioen">{{#if errorDeletion}}
    <a class='error-banner' href="/vehicles/details/{{vehicle.vin}}">
      <div class='action-error-message error'>
        <i>
          {{errorDeletion}}
        </i>
        <p>
          Close X
        </p>
      </div>
    </a>
    {{/if}}
  </div>
  <div class='dealer-name-title'>
    <h1>
      <form action="/review/add-review/{{vehicle.dealerName}}/{{vehicle.vin}}">
        <button type='submit' class='btn btn-primary'>
          Add review about: <b>{{vehicle.dealerName}}</b>
        </button>
      </form>
    </h1>
  </div>
  <div class='vehicle-details'>
    <div class='set-of-pictures-left-side'>
      <img class='main-image' src="{{vehicle.primaryPhotoUrl}}" alt="image of {{vehicle.make}} vehicle" />
      <div class='more-images'>
        {{#each vehicle.photoUrls}}
        <img class='small-pic' src="{{this}}" alt="small image - {{vehicle.make}}" />
        {{/each}}
      </div>
    </div>
    <div class='main-details'>
      <h2>
        {{vehicle.year}} {{vehicle.make}} {{vehicle.model}}
      </h2>
      <p>
        {{vehicle.doorCount}} {{vehicle.driveline}}
      </p>
      <p>
        Exterior {{vehicle.colorExterior}}
      </p>
      <p>
        {{vehicle.city}}, {{vehicle.state}}
      </p>
      <p>
        {{!-- <a href="{{this.clickoffUrl}}">
          {{vehicle.dealerName}}
        </a> --}}
        Price
        <span class='price'>
          <b>
            {{vehicle.price}}
          </b>
        </span>
      </p>
      <div class='save'>
        <form action="/profile/savedvehicles" method="POST">
          <input type='hidden' name="userName" value={{user}} />
          <input type='hidden' name="vin" value={{vehicle.vin}} />
          <input type='hidden' name="make" value={{vehicle.make}} />
          <input type='hidden' name="model" value={{vehicle.model}} />
          <button type='submit' class='btn btn-success'>
            {{#if isSaved}}
              Saved
            {{else}}
              Save This Vehicle
            {{/if}}
          </button>
        </form>
      </div>
      <br>
      <div class='reviews'>
        <form action="/review/add-review/{{vehicle.dealerName}}/{{vehicle.vin}}">
          <button type='submit' class='btn btn-primary'>
            Add review about: {{vehicle.dealerName}}
          </button>
        </form>
        <div class='dealer-review-section'>
          <h4>
            Dealer review section
          </h4>

          <div class='dealer-review-section'>
            <h4>
              Dealer review section
            </h4>

            {{#each reviews}}
            <p class='review'>
              Review: {{this}}
            </p>
            <p>
              <span class='review-author'>
                Author:
              </span>
              <span class='review-author-name'>
                {{reviews.author}}
              </span>
            </p>
            {{/each}}
            {{#each foundDealer.0.reviews}}
            <p>
              Review content: {{this.reviewContent}}
            </p>
            <p>
              Author: {{this.user_id.firstName}}
            </p>
            <div class='review-control-buttons'>
              <form action="/review/edit/{{this._id}}/{{../dealerName}}/{{../vehicle.vin}}" method='GET'>
                <button type='submit' class='btn btn-warning'>
                  Edit
                </button>
              </form>
              <form action="/review/delete/{{this._id}}/{{../vehicle.vin}}" method='GET'>
                <button type='submit' class='btn btn-danger'>
                  Delete
                </button>
              </form>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>