
<form action="/auth/signup" class="auth-form" method="POST" enctype="multipart/form-data">
   <div class="auth-form-container">
      <h1>Welcome to My CarAmerican</h1>
      <p>Create your account and completely control the way you buy your next car.</p>
      <hr>

      <label> <b>First Name</b><br>
         <input type="text" placeholder="Enter First Name" name="firstName" required>
      </label>

      <label> <b>Last Name</b><br>
         <input type="text" placeholder="Enter Last Name" name="lastName" required>
      </label>

      <label> <b>Email</b><br>
         <input type="text" placeholder="Enter Email" name="email" required>
      </label>

      <label> <b>Image</b><br>
          <input type="file" name="profilePic" />
      </label><br><br>

      <label> <b>Password</b><br>
         <input type="password" placeholder="Enter Password" name="password" required>
      </label>

      <label>
      <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
      </label>

    <p>By creating an account you agree to our 
       <a href="#" style="color:dodgerblue">
          Terms & Privacy</a>.</p>

      <button type="submit">Create Account</button>

      {{#if errorMessage}}
         <p class="error">{{errorMessage}}</p>
      {{/if}}

   </div>
</form>



   
