<div class='main-search-area'>
  <form action='/vehicles' method='POST' autocomplete='off'>
    <div class='form__group'>
      <input
        autofocus
        list='select'
        name='make'
        class='form__input'
        placeholder='Make...'
      />
      <datalist class='form-control' id='select'>
        <option value='Acura'></option>
        <option value='BMW'></option>
        <option value='Ford'>
        </option>
        <option value='Honda'>
        </option>
        <option value='Hyundai'>
        </option>
        <option value='Kia'>
        </option>
        <option value='Lexus'>
        </option>
        <option value='Mazda'>
        </option>
        <option value='Mitsubishi'>
        </option>
        <option value='Nissan'>
        </option>
        <option value='Subaru'>
        </option>
        <option value='Suzuki'>
        </option>
        <option value='Toyota'>
        </option>
      </datalist>
      <input
        type='text'
        class='form__input'
        id='model'
        placeholder='Model...'
        name='model'
      />
      <input
        type='text'
        class='form__input'
        id='year_min'
        placeholder='Min year...'
        name='year_min'
      />
      <input
        type='text'
        class='form__input'
        id='year_max'
        placeholder='Max year...'
        name='year_max'
      />

      <button type='submit' class='search-button'>
        Search
      </button>
    </div>
  </form>
</div>
<div class='main-section'>
  <div class='set-of-vehicles'>
    {{#each vehiclesFromApi}}
      <div class='vehicle-card'>
        <img class='vehicle-img' src="{{this.primaryPhotoUrl}}" alt='' />
        <p>
          {{this.make}} {{this.model}}
        </p>
        <p>
          {{this.mileage}}
        </p>
        <p>
          {{this.price}}
        </p>
        <a href="/vehicles/details/{{this.vin}}">
          DETAILS
        </a>
      </div>
    {{/each}}
    {{#if errorMessage}}
      <p>
        {{errorMessage}}
      </p>
    {{/if}}
  </div>

  

  
{{#each suvCars}}
    <h1 id="body-style-title"><a href="/vehicles/vehicles-list">SUV Cars</a></h1>
{{/each}}
</div>