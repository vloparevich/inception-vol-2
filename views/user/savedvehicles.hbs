<div class='saved-vehicles'>
  <div class='saved list'>
    <h2>
      Saved Vehicles:
    </h2>
    <form action=''>
      <div class='list-of-vehicles'>
        {{#each vehiclesFromApi}}
        <div class='list-of-vehicles-box'>
          <a href="/vehicles/details/{{this.data.vin}}">
            <div id='vehicle-card'>
              <img id='vehicle-primary-img' src="{{this.data.primaryPhotoUrl}}" alt='' />
              <div class='vehicle-info'>
                <div class='vehicle-year-make'>
                  {{this.data.year}}
                  {{this.data.make}}
                </div>
                {{this.data.bodyStyle}}
                {{this.data.model}}
                {{this.data.price}}
                <br>
                <p>Mileage:{{this.data.mileage}}</p>
                  <b>
                    Exterior:{{this.data.colorExterior}}
                  </b>
                  <b>
                    Location:{{this.data.city}}, {{this.data.state}}
                  </b>
                  <br>
                  <br>
                  <br>
                  <br>
                <form action="/savedvehicles/delete/{{this.data.vehicle}}" method='GET'></form>
                <button type='submit' class='btn btn-danger'>Remove From Favorites</button>
                </form>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
        {{#if errorMessage}}
        {{errorMessage}}
        {{/if}}
      </div>
    </form>
  </div>
</div>