<h2>Profile Editor</h2>

<form action="/profile" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_id" value="{{user.user_id}}">
    <label>First Name<input type="text" name="firstName" value="{{user.firstName}}"></label>
    <label>Last Name<input type="text" name="lastName" value="{{user.lastName}}"></label>

    <br>

    <label>Location<input type="string" name="location" value="{{user.location}}"></label>
    
    <br>

    <label>Current Vehicle<input type="string" name="currentVehicle" value="{{user.currentVehicle}}"></label>
    
    <br>

    <label>Image
          <input type="file" name="profilePic" />
          <input type="text" name="existingImage" hidden value="{{user.profilePic}}">
    </label>
      
    <br>

    <button type="submit">Save changes</button>

</form>